<form method="post" action="#!" class="col s12 m6">
    <div class="row">
        <div class="input-field col s12 m6">
            <i class="material-icons prefix pink-text text-darken-2">account_circle</i>
            <input id="first_name" type="text" class="validate" name="first_name" required>
            <label for="first_name"><span class="requireInput">* </span>Prénom</label>
        </div>
        <div class="input-field col s12 m6">
            <i class="material-icons prefix pink-text text-darken-2">account_circle</i>
            <input id="last_name" type="text" class="validate" name="last_name" required>
            <label for="last_name"><span class="requireInput">* </span>Nom</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12 m6">
            <i class="material-icons prefix pink-text text-darken-2">email</i>
            <input id="email" type="email" class="validate" name="email" required>
            <label for="email"><span class="requireInput">* </span>Email</label>
        </div>
        <div class="input-field col s12 m6">
            <i class="material-icons prefix pink-text text-darken-2">phone</i>
            <input id="phone" type="tel" class="validate" name="phone" required>
            <label for="phone"><span class="requireInput">* </span>Téléphone</label>
        </div>
    </div>


    <div class="row">
        <div class="input-field col s6">
            <i class="material-icons prefix pink-text text-darken-2">domain</i>
            <input id="company_name" type="text" class="validate"  name="company_name">
            <label for="company_name">Entreprise</label>
        </div>

        <div class="col s12 m6">
            <div class="input-field">
                <i class="material-icons prefix pink-text text-darken-2">domain</i>
                <select id="choose" name="choose" required>
                    <option value="" disabled selected>Votre choix</option>
                    <option value="1">Option 1</option>
                    <option value="2">Option 2</option>
                    <option value="3">Option 3</option>
                </select>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="input-field col s12">
            <i class="material-icons prefix pink-text text-darken-2">mode_edit</i>
            <textarea id="content" class="materialize-textarea" name="content" ></textarea>
            <label for="content"><span class="requireInput">* </span>Votre message :</label>
        </div>
    </div>

    <div class="row">
        <p><span class="requireInput">* </span> Champs requis</p>
    </div>

    <div class="row">
        <div class="input-field col s6 center-align">
            <button class="btn waves-effect waves-light amber darken-2" type="reset" name="reset">Annuler
                <i class="material-icons left">reply</i>
            </button>
        </div>
        <div class="input-field col s6 center-align">
            <button class="btn waves-effect waves-light blue darken-2" type="submit" name="action">Envoyer
                <i class="material-icons right">send</i>
            </button>
        </div>
    </div>
</form>
