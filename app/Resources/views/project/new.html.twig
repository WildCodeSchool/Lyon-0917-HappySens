{% extends 'baseIn.html.twig' %}

{% block title %}Créer un projet{% endblock %}

{% block content %}

<section class="createProjet generalContainer">
    <div class="container">
        <nav class="wrapper row">
            <ul class="center bread">
                <li class="active userCompany" id="breadOne" onclick="goStep1()"><a href="#">Informations de votre projet</a></li>
                <li class="userCompany" id="breadTwo" onclick="goStep2()"><a href="#">Détails de votre projet</a></li>
            </ul>
        </nav>
        {{ form_start(form) }}
        <div class="row">
            {#step#}
            <div id="step1">
            <div class="col s12">
                <h5 class="titleInscription blue-text text-darken-3">Nom :</h5>

                <div class="input-field col s12">
                    {% if (form_errors(form.title))  %}
                        {{ form_widget(form.title, {'attr': {'class': 'error'}}) }}
                    {% else %}
                        {{ form_widget(form.title) }}
                    {% endif %}
                    <label for="project_name"><span class="requireInput">* </span>Nom de votre projet</label>
                    <div class="center error">
                        {{ form_errors(form.title) }}
                    </div>
                </div>
            </div>
              <div class="col s12">
                <h5 class="titleInscription blue-text text-darken-3">Thème :</h5>
                <div class="input-field col s12">
                    <span class="requireInput">* </span>
                    {% if (form_errors(form.theme))  %}
                        {{ form_widget(form.theme, {'attr': {'class': 'error'}}) }}
                    {% else %}
                        {{ form_widget(form.theme) }}
                    {% endif %}
                    <label for="theme"></label>
                    <div class="center error">
                        {{ form_errors(form.theme) }}
                    </div>
                </div>
            </div>
            <div class="col s12">
                <h5 class="titleInscription blue-text text-darken-3">Date :</h5>
                <div class="input-field col s12">
                    {% if (form_errors(form.endDate))  %}
                        {{ form_widget(form.endDate, {'attr': {'class': 'datepicker error'}}) }}
                    {% else %}
                        {{ form_widget(form.endDate, {'attr': {'class': 'datepicker'}}) }}
                    {% endif %}
                    <label for="end_date"><span class="requireInput">* </span>Date de fin</label>
                    <div class="center error">
                        {{ form_errors(form.endDate) }}
                    </div>
                </div>
            </div>

            <div class="col s12">
                <h5 class="titleInscription blue-text text-darken-3">Lieu :</h5>
                <div class="input-field col s12">
                    {% if (form_errors(form.location))  %}
                        {{ form_widget(form.location, {'attr': {'class': 'error'}}) }}
                    {% else %}
                        {{ form_widget(form.location) }}
                    {% endif %}
                    <label for="location"><span class="requireInput">* </span>Lieu de votre projet</label>
                    <div class="center error">
                        {{ form_errors(form.location) }}
                    </div>
                </div>
            </div>
                <div class="center">
                    <a class="waves-effect waves-light btn amber darken-3" onclick="goStep2()">suivant</a>
                </div>
            </div>
            {#step#}
            <div id="step2" class="hide">

            <div class="col s12">
                <h5 class="titleInscription blue-text text-darken-3">Langues :</h5>
                <div class="input-field col s12">
                    <span class="requireInput">* </span>
                    <label for="language"></label>
                    {{ form_widget(form.languagesProject) }}
                </div>
            </div>
            <div class="col s12">
                <h5 class="titleInscription blue-text text-darken-3">Présentation du projet :</h5>
                <div class="input-field col s12">
                    {% if (form_errors(form.presentation))  %}
                        {{ form_widget(form.presentation, { 'attr': {'class': 'materialize-textarea error'} }) }}
                    {% else %}
                        {{ form_widget(form.presentation, { 'attr': {'class': 'materialize-textarea'} }) }}
                    {% endif %}
                    <label for="description"><span class="requireInput">* </span>Ecrire la présentation de votre
                        projet</label>
                    <div class="center error">
                        {{ form_errors(form.presentation) }}
                    </div>
                </div>
            </div>
            <div class="col s12">
                <h5 class="titleInscription blue-text text-darken-3">Les Avantages :</h5>
                <div class="input-field col s12">
                    {% if (form_errors(form.beneficeCompany))  %}
                        {{ form_widget(form.beneficeCompany, { 'attr': {'class': 'materialize-textarea error'} }) }}
                    {% else %}
                        {{ form_widget(form.beneficeCompany, { 'attr': {'class': 'materialize-textarea'} }) }}
                    {% endif %}
                    <label for="advantagesCompany"><span class="requireInput">* </span>Trois avantages pour votre
                        employeur</label>
                    <div class="center error">
                        {{ form_errors(form.beneficeCompany) }}
                    </div>
                </div>
                <div class="input-field col s12">
                    {% if (form_errors(form.profit))  %}
                        {{ form_widget(form.profit, { 'attr': {'class': 'materialize-textarea error'} }) }}
                    {% else %}
                        {{ form_widget(form.profit, { 'attr': {'class': 'materialize-textarea'} }) }}
                    {% endif %}
                    <label for="advantagesGroup"><span class="requireInput">* </span>Trois avantages pour le groupe de
                        votre projet</label>
                    <div class="center error">
                        {{ form_errors(form.profit) }}
                    </div>
                </div>
            </div>
            <div class="col s12">
                <h5 class="titleInscription blue-text text-darken-3">Photo :</h5>
                <div class="input-field col s12">
                    {{ form_widget(form.photo) }}
                    <div class="center error">
                        {{ form_errors(form.photo) }}
                    </div>
                </div>
            </div>
            {#<div class="file-field input-field col s12 m6">#}
                {#<div class="btn blue darken-3">Image#}
                    {#<input type="file">#}
                {#</div>#}
                {#<label for="image_project"></label>#}
                {#{{ form_widget(form.photo, { 'attr': {'class': 'file-path-wrapper'} }) }}#}
            {#</div>#}
    <div class="col s12">
        <div class="center">
            <a class="waves-effect waves-light btn blue darken-3" onclick="goStep1()">retour</a>
            <a class="waves-effect waves-light btn amber darken-2"><input type="submit" value="Envoyer" /></a>
            {#<a href="{{ path('viewProject') }}" type="submit" class="waves-effect waves-light btn amber darken-2">Envoyer</a>#}
        </div>
    </div>
    </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
    {% block javascripts %}
    <script src="{{ asset('assets/script/stepForm.js') }}"></script>
{% endblock %}