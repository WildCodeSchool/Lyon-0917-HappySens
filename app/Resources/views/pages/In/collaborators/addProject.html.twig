{% extends 'baseIn.html.twig' %}

{% block title %}Créer un projet{% endblock %}

{% block content %}
    <section class="createProjet generalContainer">
        <div class="container">
            {{ form_start(form) }}
            <div class="row">
                <div class="col s12 m6">
                    <h5 class="titleInscription pink-text text-darken-2">Nom :</h5>
                    <div class="input-field col s12">
                        {{ form_widget(form.nameProject) }}
                        <label for="project_name"><span class="requireInput">* </span>Nom de votre projet</label>
                    </div>
                    </div>
                    <div class="col s12 m6">
                        <h5 class="titleInscription pink-text text-darken-2">Lieu :</h5>
                    <div class="input-field col s12">
                        {{ form_widget(form.location) }}
                        <label for="location"><span class="requireInput">* </span>Lieu de votre projet</label>
                    </div>
                </div>
                <div class="col s12">
                    <h5 class="titleInscription pink-text text-darken-2">Date :</h5>
                    <div class="input-field col s12 m6">
                        {{ form_widget(form.dateStart, {'attr': {'class': 'datepicker'}}) }}
                        <label for="start_date"><span class="requireInput">* </span>Date de démarrage</label>
                    </div>
                    <div class="input-field col s12 m6">
                        {{ form_widget(form.dateEnd, {'attr': {'class': 'datepicker'}}) }}
                        <label for="end_date"><span class="requireInput">* </span>Date de fin</label>
                    </div>
                </div>
                <div class="col s12 m6">
                    <h5 class="titleInscription pink-text text-darken-2">Thème :</h5>
                    <div class="input-field col s12">
                        <span class="requireInput">* </span>
                        {{ form_widget(form.theme) }}
                        <label for="theme"></label>
                    </div>
                </div>
                <div class="col s12 m6">
                    <h5 class="titleInscription pink-text text-darken-2">Langues :</h5>
                    <div class="input-field col s12">
                        <span class="requireInput">* </span>
                        <label for="language"></label>
                        {{ form_widget(form.languages) }}
                    </div>
                </div>


                {#Mettre des row pour les text area présentation projet et text area avantages#}

                <div class="col s12">
                    <h5 class="titleInscription pink-text text-darken-2">Présentation du projet :</h5>
                    <div class="input-field col s12">
                        {{ form_widget(form.description, { 'attr': {'class': 'materialize-textarea'} }) }}
                        <label for="description"><span class="requireInput">* </span>Ecrire votre présentation du
                            projet</label>
                    </div>
                </div>
                <div class="col s12">
                    <h5 class="titleInscription pink-text text-darken-2">Les Avantages :</h5>
                    <div class="input-field col s12 m6">
                        {{ form_widget(form.advantagesCompany, { 'attr': {'class': 'materialize-textarea'} }) }}
                        <label for="advantagesCompany"><span class="requireInput">* </span>3 avantages pour votre
                            employeur</label>
                    </div>
                    <div class="input-field col s12 m6">
                        {{ form_widget(form.advantagesGroup, { 'attr': {'class': 'materialize-textarea'} }) }}
                        <label for="advantagesGroup"><span class="requireInput">* </span>3 avantages pour le groupe de
                            votre projet</label>
                    </div>
                </div>
                <div class="file-field input-field col s12 m6">
                    <div class="btn blue darken-3">Image
                        <input type="file">
                    </div>
                    <label for="image_project"></label>
                    {{ form_widget(form.uploadPicture, { 'attr': {'class': 'file-path-wrapper'} }) }}
                </div>
            </div>
        </div>
        <div class="col s12 m6">
            <div class="center">
                <a href="{{ path('UserProfil', {'slug' : app.user.slug}) }}"
                   class="waves-effect waves-light btn pink darken-3">Retour</a>
                <a href="{{ path('viewProject') }}" type="submit" class="waves-effect waves-light btn amber darken-2">Envoyer</a>
            </div>
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/script/app.js') }}"></script>
{% endblock %}
