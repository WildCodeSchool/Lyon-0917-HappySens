{% extends 'baseIn.html.twig' %}

{% block title %}{{ company.name }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col s12 m10 offset-m1">
            <div class="row">
                <div class="card medium headerProfil">
                    <div class="card-image waves-effect waves-block waves-light">
                        <img class="activator" src="{{ asset('assets/images/happysens-time.jpg') }}" height="300px">
                    </div>
                    <div class="card-profile-image">
                        {% if company.logo %}
                            <img src="{{ asset('assets/images/placeholderCompany.png') }}" alt="profile image" class="circle z-depth-3 activator">
                        {% else %}
                            <img src="{{ asset('uploads/photoCompany/' ~ company.logo) }}" alt="profile image" class="circle responsive-img">
                        {% endif %}
                    </div>
                    <a class="btn-floating btn-large halfway-fab activator waves-effect waves-light pink darken-2 right"><i class="material material-icons">info_outline</i></a>

                    <div class="card-content">
                        <div class="myInfosEmploye">
                            <div id="name">
                                <span class="card-title activator grey-text text-darken-4">{{ company.name }}</span>
                                <span> {{ nbHappySalarie }} Happy salariés</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-reveal">
                        <h5 class="blue-text darken-2">
                            {{ company.name }}
                            <i class="material-icons right black-text card-title">close</i>
                        </h5>
                        <div class="infoPersoEmploye">

                        </div>
                        <div class="col s12 m6 center-align">
                            <table>
                                <tbody>
                                <tr>
                                    <th>Activité</th>
                                    <td>{{ company.activity }}</td>
                                </tr>
                                <tr>
                                    <th>Effectif</th>
                                    <td>{{ company.nbSalary }}</td>
                                </tr>
                                <tr>
                                    <th>Date de création</th>
                                    <td>{% if company.birthdate %}{{  company.birthdate|date('Y') }}{% endif %}</td>
                                </tr>
                                <tr>
                                    <th>Lieu des sites</th>
                                    <td>{{ company.location }}</td>
                                </tr>
                                <tr>
                                    <th>Référent Happy Sens</th>
                                    {% if refHappySens %}
                                        <td><a href="{{ path('UserProfil', {'slug': refHappySens.0.slug}) }}">{{ refHappySens.0.firstName }} {{ refHappySens.0.lastName }}</a></td>
                                    {% endif %}
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            {# For desktop #}
            {{ include('pages/In/company/largeProfilCompany.html.twig') }}
            {# For mobile and tablet #}
            {{ include('pages/In/company/mobileProfilCompany.html.twig') }}

        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/script/showAllSalary.js') }}"></script>
{% endblock %}